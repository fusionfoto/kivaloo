PROG=	test_dynamodb_queue
SRCS=	main.c

# Fundamental algorithms
.PATH.c	:	../../libcperciva/alg
SRCS	+=	sha256.c
IDIRS	+=	-I ../../libcperciva/alg

# Data structures
.PATH.c	:	../../libcperciva/datastruct
SRCS	+=	elasticarray.c
SRCS	+=	ptrheap.c
SRCS	+=	timerqueue.c
IDIRS	+=	-I ../../libcperciva/datastruct

# Utility functions
.PATH.c	:	../../libcperciva/util
SRCS	+=	asprintf.c
SRCS	+=	b64encode.c
SRCS	+=	hexify.c
SRCS	+=	insecure_memzero.c
SRCS	+=	monoclock.c
SRCS	+=	noeintr.c
SRCS	+=	sock.c
SRCS	+=	sock_util.c
SRCS	+=	warnp.c
IDIRS	+=	-I ../../libcperciva/util

# Event loop
.PATH.c	:	../../libcperciva/events
SRCS	+=	events_immediate.c
SRCS	+=	events_network.c
SRCS	+=	events_network_selectstats.c
SRCS	+=	events_timer.c
SRCS	+=	events.c
IDIRS	+=	-I ../../libcperciva/events

# Event-driven networking
.PATH.c	:	../../libcperciva/network
SRCS	+=	network_connect.c
SRCS	+=	network_read.c
SRCS	+=	network_write.c
IDIRS	+=	-I ../../libcperciva/network

# AWS request signing
.PATH.c	:	../../libcperciva/aws
SRCS	+=	aws_readkeys.c
SRCS	+=	aws_sign.c
IDIRS	+=	-I ../../libcperciva/aws

# Buffered networking
.PATH.c	:	../../lib/netbuf
SRCS	+=	netbuf_read.c
SRCS	+=	netbuf_write.c
IDIRS	+=	-I ../../lib/netbuf

# HTTP protocol
.PATH.c	:	../../lib/http
SRCS	+=	http.c
IDIRS	+=	-I ../../lib/http

# DynamoDB protocol
.PATH.c	:	../../lib/dynamodb
SRCS	+=	dynamodb_request.c
SRCS	+=	dynamodb_request_queue.c
IDIRS	+=	-I ../../lib/dynamodb

# Server pool management
.PATH.c	:	../../lib/serverpool
SRCS	+=	serverpool.c
IDIRS	+=	-I ../../lib/serverpool

# Logging framework
.PATH.c	:	../../lib/logging
SRCS	+=	logging.c
IDIRS	+=	-I ../../lib/logging

CFLAGS	+=	-g

test:	test_dynamodb_queue
	./test_dynamodb_queue ~/.dynamodb/aws.key dynamodb.log
CLEANFILES +=	dynamodb.log

.include <bsd.prog.mk>
